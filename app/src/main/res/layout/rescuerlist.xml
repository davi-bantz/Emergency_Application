<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editUser_Name"
        app:layout_constraintEnd_toEndOf="@+id/editUser_Name"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="@+id/editUser_Name" />

    <EditText
        android:id="@+id/editUser_Name"
        android:layout_width="336dp"
        android:layout_height="48dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/bubble"
        android:hint="Name:"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/material_dynamic_neutral40"
        android:textSize="14sp"
        android:textStyle="bold"
        app:backgroundTint="#9BFF8E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editUserName1"
        app:layout_constraintEnd_toEndOf="@+id/editUserName1"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="@+id/editUserName1" />

    <EditText
        android:id="@+id/editUserName1"
        android:layout_width="336dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bubble"
        android:hint="Username:"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="#70777c"
        android:textSize="14sp"
        android:textStyle="bold"
        app:backgroundTint="#9BFF8E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editUser_Name" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birthdate"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editdob"
        app:layout_constraintEnd_toEndOf="@+id/editdob"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="@+id/editdob" />

    <EditText
        android:id="@+id/editdob"
        android:layout_width="336dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bubble"
        android:focusable="false"
        android:hint="Select your Date of Birth"
        android:inputType="date"
        android:padding="10dp"
        android:textAlignment="viewStart"
        android:textColor="@color/material_dynamic_neutral80"
        android:textSize="14sp"
        android:textStyle="bold"
        app:backgroundTint="#9BFF8E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editUserName1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editRescuerPhoneNumber"
        app:layout_constraintEnd_toEndOf="@+id/editRescuerPhoneNumber"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="@+id/editRescuerPhoneNumber" />

    <EditText
        android:id="@+id/editRescuerPhoneNumber"
        android:layout_width="336dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bubble"
        android:hint="Phone Number:"
        android:inputType="phone"
        android:padding="10dp"
        android:textColor="#70777c"
        android:textSize="14sp"
        android:textStyle="bold"
        app:backgroundTint="#9BFF8E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editdob" />

    <Button
        android:id="@+id/Rescuer_EditBTN"
        android:layout_width="195dp"
        android:layout_height="48dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/bubble"
        android:text="EDIT"
        android:textSize="20sp"
        app:backgroundTint="#FFA500"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editRescuerPhoneNumber"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>