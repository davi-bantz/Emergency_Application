<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/regis"
    tools:context=".Rescuer_Registration.Rescuer_Log_In">
    <TextView
        android:id="@+id/textView"
        android:layout_width="357dp"
        android:layout_height="93dp"
        android:background="@android:drawable/divider_horizontal_dark"
        android:fontFamily="@font/alfa_slab_one"
        android:foreground="@android:drawable/divider_horizontal_dark"
        android:gravity="center|center_horizontal|top"
        android:letterSpacing="0.25"
        android:text="C E R S"
        android:textColor="@color/black"
        android:textSize="55sp"
        android:textStyle="bold"
        app:drawableTint="#A6A6A6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="218dp"
        android:layout_height="169dp"
        app:layout_constraintBottom_toTopOf="@+id/editLoginEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/weytrue" />

    <EditText
        android:id="@+id/editLoginEmailAddress"
        android:layout_width="309dp"
        android:layout_height="58dp"
        android:background="#80FFFFFF"
        android:ems="10"
        android:fontFamily="@font/archivo_black"
        android:hint="Enter Email:"
        android:inputType="textEmailAddress"
        android:padding="10sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.468" />

    <EditText
        android:id="@+id/editLoginPassword"
        android:layout_width="271dp"
        android:layout_height="61dp"
        android:background="#80FFFFFF"
        android:ems="10"
        android:fontFamily="@font/archivo_black"
        android:hint="Password:"
        android:inputType="textPassword"
        android:padding="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.364"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editLoginEmailAddress"
        app:layout_constraintVertical_bias="0.05" />

    <ImageView
        android:id="@+id/Hide_ShowPassword"
        android:layout_width="34dp"
        android:layout_height="63dp"
        android:layout_below="@+id/editLoginPassword"
        app:layout_constraintBottom_toBottomOf="@+id/editLoginPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/editLoginPassword"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/Login"
        android:layout_width="169dp"
        android:layout_height="59dp"
        android:background="@drawable/forgot"
        android:text="Log in"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:backgroundTint="#2DE40C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonForgotPassEmail"
        app:layout_constraintVertical_bias="0.331" />

    <Button
        android:id="@+id/buttonForgotPassEmail"
        android:layout_width="303dp"
        android:layout_height="44dp"
        android:background="@drawable/forgot"
        android:text="Forgot Email or Password?"
        app:backgroundTint="#FFA500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.674" />

    <Button
        android:id="@+id/Sign_Up_Rescuer"
        android:layout_width="113dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/forgot"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#FFBD59"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Login"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/progressBarLogIn"
        style="?android:attr/progressBarStyle"
        android:layout_width="109dp"
        android:layout_height="115dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="10dp"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>